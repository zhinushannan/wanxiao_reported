<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.kwcoder.report.mapper.batch.ClazzCustomDao">
    <resultMap id="BaseResultMap" type="club.kwcoder.report.dataobject.Clazz">
        <id column="clazz_name" jdbcType="VARCHAR" property="clazzName"/>
        <result column="teacher_name" jdbcType="VARCHAR" property="teacherName"/>
        <result column="date" jdbcType="VARCHAR" property="date"/>
        <result column="dept_id" jdbcType="VARCHAR" property="deptId"/>
        <result column="group_id" jdbcType="VARCHAR" property="groupId"/>
        <result column="bot_id" jdbcType="VARCHAR" property="botId"/>
        <result column="delete" jdbcType="INTEGER" property="delete"/>
    </resultMap>
    <sql id="Example_Where_Clause">
        <where>
            <foreach collection="oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Update_By_Example_Where_Clause">
        <where>
            <foreach collection="example.oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Base_Column_List">
        clazz_name
        , teacher_name, `date`, dept_id, group_id, bot_id, `delete`
    </sql>

    <insert id="insertAndUpdate">
        insert into clazz (clazz_name, teacher_name, `date`,
        dept_id, group_id, bot_id,
        `delete`)
        values
        <foreach collection="clazzList" item="item" index="index" separator=",">
            (#{item.clazzName,jdbcType=VARCHAR}, #{item.teacherName,jdbcType=VARCHAR}, #{item.date,jdbcType=VARCHAR},
            #{item.deptId,jdbcType=VARCHAR}, #{item.groupId,jdbcType=VARCHAR}, #{item.botId,jdbcType=VARCHAR},
            #{item.delete,jdbcType=INTEGER})
        </foreach>
        ON DUPLICATE KEY UPDATE
        teacher_name = values(teacher_name),
        `date` = values(`date`),
        dept_id = values(dept_id),
        group_id = values(group_id),
        bot_id = values(bot_id),
        `delete` = values(`delete`);
    </insert>

</mapper>