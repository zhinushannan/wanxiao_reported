<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.kwcoder.report.mapper.batch.GroupListBatchDao">
    <resultMap id="BaseResultMap" type="club.kwcoder.report.dataobject.GroupList">
        <id column="bot_id" jdbcType="VARCHAR" property="botId"/>
        <id column="group_id" jdbcType="VARCHAR" property="groupId"/>
        <result column="group_name" jdbcType="VARCHAR" property="groupName"/>
        <result column="max_member_count" jdbcType="INTEGER" property="maxMemberCount"/>
        <result column="member_count" jdbcType="INTEGER" property="memberCount"/>
        <result column="mark" jdbcType="VARCHAR" property="mark"/>
    </resultMap>
    <sql id="Example_Where_Clause">
        <where>
            <foreach collection="oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Update_By_Example_Where_Clause">
        <where>
            <foreach collection="example.oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Base_Column_List">
        bot_id
        , group_id, group_name, max_member_count, member_count, mark
    </sql>

    <insert id="insertAndUpdateBatch">
        insert into group_list (bot_id, group_id, group_name, max_member_count,
        member_count, mark)
        values
        <foreach collection="groupList" item="item" index="index" separator=",">
            (#{item.botId,jdbcType=VARCHAR}, #{item.groupId,jdbcType=VARCHAR},
             #{item.groupName,jdbcType=VARCHAR}, #{item.maxMemberCount,jdbcType=INTEGER},
            #{item.memberCount,jdbcType=INTEGER}, #{item.mark,jdbcType=VARCHAR})
        </foreach>
        ON DUPLICATE KEY UPDATE
        group_name = values(group_name),
        max_member_count = values(max_member_count),
        member_count = values(member_count),
        mark = values(mark);
    </insert>
</mapper>